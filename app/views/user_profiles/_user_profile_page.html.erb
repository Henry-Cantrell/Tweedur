<div class='box'>
  <div class='columns'>
    <div class='column is-two-fifths'>
      <article class='media'>
        <figure class='media-left'>
          <p class="image is-128x128">
            <img src="https://bulma.io/images/placeholders/128x128.png" class='is-square'>
          </p>
        </figure>  
          <div class='media-content'>
            <div class='content'>
              <p class='is-size-4'>
                <strong><%= @user.last_name %></strong> 
                <br>
                <p class='is-size-6'>
                  <%= @user.bio %>
                </p>
              </p>
                <% if @user.id == current_user.id %>
                    <%= render partial:"change_bio", locals: {id: @user.id}%>
                <% end %>
            </div>
          </div>
      </article>
    </div>
    <div style='margin-top:8px'>
    <div class='columns is-centered is-size-4'>
      <div class='column'>
        <div class='content'>
          <p>
            <strong>Posts</strong> 
            <br>
            <%= @user.created_posts.length %>
          </p>
        </div>
      </div>
      <div class='column'>
        <div class='content'>
          <p>
            <strong>Followers</strong> 
            <br>
            <%= @user.following_users.length %>
          </p>
        </div>
    </div>
    <div class='column'>
        <div class='content'>
          <p>
            <strong>Followed</strong> 
            <br>
            <%= @user.followed_users.length %>
          </p>
        </div>
    </div>
    <% if @user.id != current_user.id %>
    <div class='column'>
      <div class='content'>
	<% if @follow_relationship == nil %>
      <%= render partial: "follow_partial", locals: {follower_id: current_user.id, followed_id: @user.id} %>
	<% else %>
	    <%= render partial: "unfollow_partial", locals: {follower_id: current_user.id, followed_id: @user.id} %>
	<% end %>
      </div>
    </div>
  <% end %>
  </div>
  </div>
  </div>
</div>