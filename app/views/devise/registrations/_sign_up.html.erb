<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <fieldset>
  
  <!-- Form Name -->
  <legend class="is-size-3">Sign up</legend>
  
  <!-- Text input-->
  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <%= f.input :name, required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label: false, placeholder: "Name" %>
    </div>
  </div>
  
  <!-- Text input-->
  <div class="field">
    <label class="label">Email</label>
    <div class="control">
    <%= f.input :email, required: true, input_html: { class:"input" }, wrapper: false, label: false %> 
    </div>
  </div>
  
  <!-- Password input-->
  <div class="field">
    <label class="label">Password</label>
  <div class="control">
    <%= f.input :password, required: true, input_html: { class:"input" }, wrapper: false, label: false%>
  </div>
  </div>
  
  <div class="field">
    <label class="label">Password confirmation</label>
  <div class="control">
    <%= f.input :password_confirmation, required: true, input_html: { class: "input" }, wrapper: false, label: false %>		
  </div>
  </div>
  
  </fieldset>
  <% end %>
  